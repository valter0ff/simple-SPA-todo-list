<% if @task.completed? %>
  $('#<%=dom_id(@task)%>').addClass("light-blue")
    .find('div.task-text').addClass("text-decor-line")
    .find('div.flatpickr').addClass("d-none");
<% else %>
  $('#<%=dom_id(@task)%>').removeClass("light-blue")
    .find('div.task-text').removeClass("text-decor-line")
    .find('div.flatpickr').removeClass("d-none");
<% end %>

configuredFlatpickr();
